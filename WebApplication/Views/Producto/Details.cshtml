@model WebApplication.Models.Producto

<section class="container my-5">
    <div class="row">
        <!-- Columna de Imágenes -->
        <div class="col-md-6">
            <div class="d-flex flex-column gap-3">
                <img src="~/Images/Prueba.png" class="img-fluid rounded shadow" alt="Foto 1">
                <img src="~/Images/Prueba.png" class="img-fluid rounded shadow" alt="Foto 2">
                <img src="~/Images/Prueba.png" class="img-fluid rounded shadow" alt="Foto 3">
                <img src="~/Images/Prueba.png" class="img-fluid rounded shadow" alt="Foto 4">
            </div>
        </div>

        <!-- Columna de Detalles -->
        <div class="col-md-6">
            <h1 class="mb-4 text-primary">@Model.Nombre</h1>
            <h2 class="text-success mb-3">€@Model.Precio</h2>
            <p class="text-muted mb-5">@Model.Descripcion</p>

            <h5 class="mb-3">Colores:</h5>
            <div class="form-check mb-2">
                <input class="form-check-input" type="radio" name="colorOptions" id="option1">
                <label class="form-check-label" for="option1">
                    Edición limitada de 10 unidades
                </label>
            </div>
            <div class="form-check mb-4">
                <input class="form-check-input" type="radio" name="colorOptions" id="option2">
                <label class="form-check-label" for="option2">
                    Lo quieres encargar? (plazo 5-10 días)
                </label>
            </div>
           
            <h5 class="mt-4 mb-3">Descripción larga</h5>
            <p class="mb-5">@Model.Descripcion</p>

            <h5 class="mb-3">Medidas</h5>
            <p class="mb-4">Introduce las medidas aquí.</p>

           <!-- Información desplegable -->
            <div class="accordion mb-5" id="infoAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Info envío
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#infoAccordion">
                        <div class="accordion-body">
                            Información sobre el envío.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Política de devolución
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#infoAccordion">
                        <div class="accordion-body">
                            Detalles sobre la política de devolución.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Preorder
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#infoAccordion">
                        <div class="accordion-body">
                            Detalles sobre la opción de preorder.
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 mt-4 justify-content-center">
                <button type="button" class="btn btn-lg btn-primary btn-custom-style">Añadir al carrito</button>
                <a href="@Url.Action("Store", "Store")" class="btn btn-lg btn-outline-secondary btn-custom-style">Volver a Tienda</a>
            </div>
        </div>
    </div>
</section>

